<s:SurfaceWindow x:Class="TouchingStory.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="TouchingStory"
    Name="HomeSurface"
    >
   
    <Grid Name="MainGridView">        
        <s:TagVisualizer 
            Name="MyTagVisualizer" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Background="White" 
            Height="Auto" Width="Auto"
            VisualizationAdded="OnVisualizationAdded"           
            VisualizationMoved="OnVisualizationMoved"             
            >
        </s:TagVisualizer>
        <TextBlock
            Name="StartingMessage"
            Text="Put a fairy object on the table"
            Foreground="Black"
            FontSize="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Times New Roman"></TextBlock>
    </Grid>
</s:SurfaceWindow>
