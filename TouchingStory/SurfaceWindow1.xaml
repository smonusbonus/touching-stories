<s:SurfaceWindow x:Class="TouchingStory.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="TouchingStory"
    Name="HomeSurface"
    >
   
    <Grid Name="MainGridView"
            Background="White">        
        <s:TagVisualizer 
            Name="MyTagVisualizer" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Height="Auto" Width="Auto"
            VisualizationAdded="OnVisualizationAdded"           
            VisualizationMoved="OnVisualizationMoved" 
            VisualizationRemoved="OnVisualizationRemoved"
            >
        </s:TagVisualizer>
        <TextBlock
            Name="StartingMessage"
            Text="Please put an object on the table"
            Foreground="Black"
            FontSize="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ></TextBlock>
    </Grid>
</s:SurfaceWindow>
